<div id="<%= dom_id patient %>" class="card shadow-sm mt-4">
  <div class="card-header bg-light">
    <h2 class="h5 mb-0">Patient Details</h2>
  </div>
  
  <div class="card-body">
    <dl class="row mb-0">
      <dt class="col-sm-3 text-sm-end">First name:</dt>
      <dd class="col-sm-9"><%= patient.first_name %></dd>

      <dt class="col-sm-3 text-sm-end">Last name:</dt>
      <dd class="col-sm-9"><%= patient.last_name %></dd>

      <dt class="col-sm-3 text-sm-end">Date of birth:</dt>
      <dd class="col-sm-9"><%= patient.date_of_birth.strftime('%B %d, %Y') rescue 'Not specified' %></dd>

      <dt class="col-sm-3 text-sm-end">Medical record #:</dt>
      <dd class="col-sm-9"><%= patient.medical_record_number || 'Not specified' %></dd>

      <dt class="col-sm-3 text-sm-end">Assigned to:</dt>
      <dd class="col-sm-9">
        <%= patient.user.email rescue 'Unassigned' %>
        <small class="text-muted">(ID: <%= patient.user_id %>)</small>
      </dd>
    </dl>
  </div>
  
  <div class="card-footer bg-light">
    <%= link_to 'Edit Patient', edit_patient_path(patient), class: 'btn btn-outline-primary me-2' %>
    <%= link_to 'Back to Patients', patients_path, class: 'btn btn-outline-secondary' %>
  </div>
</div>