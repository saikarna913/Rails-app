<%= form_with(model: patient, html: { class: "needs-validation", novalidate: true }) do |form| %>
  <% if patient.errors.any? %>
    <div class="alert alert-danger">
      <h4 class="alert-heading"><%= pluralize(patient.errors.count, "error") %> prohibited this patient from being saved:</h4>
      <ul class="mb-0">
        <% patient.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :first_name, class: "form-label" %>
    <%= form.text_field :first_name, class: "form-control", required: true %>
    <div class="invalid-feedback">
      Please provide a first name.
    </div>
  </div>

  <div class="mb-3">
    <%= form.label :last_name, class: "form-label" %>
    <%= form.text_field :last_name, class: "form-control", required: true %>
    <div class="invalid-feedback">
      Please provide a last name.
    </div>
  </div>

  <div class="mb-3">
    <%= form.label :date_of_birth, class: "form-label" %>
    <%= form.date_field :date_of_birth, class: "form-control", required: true %>
    <div class="invalid-feedback">
      Please provide a valid date of birth.
    </div>
  </div>

  <div class="mb-3">
    <%= form.label :medical_record_number, class: "form-label" %>
    <%= form.text_field :medical_record_number, class: "form-control", required: true %>
    <div class="invalid-feedback">
      Please provide a medical record number.
    </div>
  </div>

  <%# Hidden field for user_id - automatically set to current user %>
  <%= form.hidden_field :user_id, value: current_user.id %>

  <div class="d-grid gap-2">
    <%= form.submit class: "btn btn-dark btn-lg" %>
  </div>
<% end %>