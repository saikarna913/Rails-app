<% content_for :title, "Edit Patient" %>

<div class="container py-4">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card shadow-sm">
        <div class="card-header bg-light">
          <h1 class="h4 mb-0">Edit Patient</h1>
        </div>
        
        <div class="card-body">
          <%= render "form", patient: @patient %>
        </div>
        
        <div class="card-footer bg-light">
          <div class="d-flex justify-content-between">
            <%= link_to @patient, class: "btn btn-outline-primary" do %>
              <i class="bi bi-eye-fill"></i> Show Patient
            <% end %>
            
            <%= link_to patients_path, class: "btn btn-outline-secondary" do %>
              <i class="bi bi-arrow-left"></i> Back to Patients
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>