<% content_for :title, @patient.full_name %>

<div class="container py-4">
  <% if notice %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <%= notice %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>

  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">Patient Details</h1>
    <div>
      <%= link_to patients_path, class: "btn btn-outline-secondary" do %>
        <i class="bi bi-arrow-left"></i> All Patients
      <% end %>
    </div>
  </div>

  <div class="card shadow-sm mb-4">
    <div class="card-body">
      <%= render @patient %>
    </div>
  </div>

  <div class="d-flex justify-content-between">
    <div>
      <%= link_to edit_patient_path(@patient), class: "btn btn-primary me-2" do %>
        <i class="bi bi-pencil-fill"></i> Edit Patient
      <% end %>
    </div>
    
    <div>
      <%= button_to @patient, method: :delete, 
                    class: "btn btn-danger",
                    data: { turbo_confirm: "Are you sure you want to delete this patient?" } do %>
        <i class="bi bi-trash-fill"></i> Delete Patient
      <% end %>
    </div>
  </div>
</div>