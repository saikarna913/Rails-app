<div class="container py-5" style="max-width: 500px;">
  <h2 class="mb-4 text-center">Log in</h2>

  <%# Render error messages partial at the top of the form %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "border p-4 rounded" }) do |f| %>
    <div class="mb-3">
      <%= f.label :email, class: "form-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control #{'is-invalid' if resource.errors[:email].any?}" %>
      <% if resource.errors[:email].any? %>
        <div class="invalid-feedback">
          <%= resource.errors[:email].first %>
        </div>
      <% end %>
    </div>

    <div class="mb-3">
      <%= f.label :password, class: "form-label" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control #{'is-invalid' if resource.errors[:password].any?}" %>
      <% if resource.errors[:password].any? %>
        <div class="invalid-feedback">
          <%= resource.errors[:password].first %>
        </div>
      <% end %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="mb-3 form-check">
        <%= f.check_box :remember_me, class: "form-check-input" %>
        <%= f.label :remember_me, class: "form-check-label" %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class: "btn btn-dark w-100" %>
    </div>
  <% end %>

</div>